.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: whitesmoke;
  min-height: 100vh;
}
.card{
  width: 710rpx;
  border-radius: 20rpx;
  background-color: white;
  margin: 20rpx 0;
}
.card-head{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.avatar{
  width: 150rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.title{
  display: flex;
  flex-direction: column;
}
.nickName{
  font-size: 35rpx;
  margin: 0 10rpx;
}
.address{
  font-size: 30rpx;
  margin: 0 10rpx;
  color: gray;
}
.card-body image{
  width: 100%;
}
.card-foot{
  font-size: 35rpx;
  text-align: right;
  margin: 20rpx;
}